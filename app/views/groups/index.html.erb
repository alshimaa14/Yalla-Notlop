          <td><%= link_to 'Edit', edit_user_group_path(current_user,group) %></td>
          <td><%= link_to 'Destroy', [current_user,group], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
